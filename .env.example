# API Keys for Data Collection Scripts
# Copy this file to .env and fill in your actual API keys
# DO NOT commit .env file with real keys to repository

# Binance API Configuration
# Get keys from: https://www.binance.com/en/user/settings/api-management
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here

# Glassnode API Key
# Register at: https://glassnode.com/
# Used for on-chain whale tracking and exchange flow analysis
GLASSNODE_API_KEY=your_glassnode_api_key_here

# Whale Alert API Key
# Register at: https://whale-alert.io/
WHALE_ALERT_API_KEY=your_whale_alert_api_key_here

# CryptoQuant API Key
# Register at: https://cryptoquant.com/
CRYPTOQUANT_API_KEY=your_cryptoquant_api_key_here

# CryptoCompare API (optional, for sentiment/fear index)
CRYPTOCOMPARE_API_KEY=your_cryptocompare_api_key_here

# Database Configuration
DATABASE_URL=sqlite:///crypto_trading.db

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your_secret_key_here

# Data Collection Settings
DATA_COLLECTION_INTERVAL_HOURS=24
BACKUP_ENABLED=true
VERBOSE_LOGGING=false

# Logging
LOG_LEVEL=INFO

# Chart.js Registry Configuration
CHARTJS_VERSION=4.4.0
